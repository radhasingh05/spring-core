<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id = "exampleBean" class = "com.radha.ExampleBean" init-method = "init"
          destroy-method = "destroy">
        <property name = "message" value = "Hello World! from ExampleBean"/>
    </bean>

    <bean id = "beana" class = "com.radha.BeanA" init-method = "init"
          destroy-method = "destroy">
        <property name = "message" value = "Hello World! from BeanA"/>
    </bean>

</beans>